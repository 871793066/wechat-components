/* components/signature/index.wxss */

.content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.rotate {
  transform: rotate(90deg);
}

.handWriting {
  background-color: white;
  width: 100%;
  min-height: 80%;
  flex-grow: 1;
  padding: 0;
}

.view-operation {
  width: 100%;
  height: 20%;
  max-height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0;
}

.view-operation button {
  width: 50%;
  height: 100%;
  padding: 0 !important;
}
