/* components/tablecell/index.wxss */

.item-cell {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  /* padding: 0 20rpx; */
  background-color: white;
}

.item-cell .title {
  flex-shrink: 0;
  min-width: 120rpx;
  text-align: left;
}

.item-cell picker {
  height: 100%;
  line-height: 100%;
  min-width: 350rpx;
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  flex-grow: 1;
}

.item-cell .detail {
  text-align: right;
  flex-grow: 1;
}

.item-cell .arrow {
  width: 15rpx;
  height: 27rpx;
  margin-left: 10rpx;
}